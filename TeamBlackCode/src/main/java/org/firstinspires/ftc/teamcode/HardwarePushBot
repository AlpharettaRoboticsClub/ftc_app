package org.firstinspires.ftc.teamcode;

import com.qualcomm.robotcore.hardware.DcMotor;
import com.qualcomm.robotcore.util.ElapsedTime;

/**
 * Created by shrey on 2018-09-12. Modified by Kunal on 2018-10-15
 */
public class HardwarePushBot {
    /* Public OpMode members. */
    public static DcMotor  leftMiddleDrive   = null;
    public static DcMotor  rightMiddleDrive  = null;
    public static DcMotor  middleArm    = null;
    public static DcMotor  leftArmLift   = null;

    /* local OpMode members. */
    com.qualcomm.robotcore.hardware.HardwareMap hwMap           =  null;
    private ElapsedTime period  = new ElapsedTime();

    /* Constructor */
    public HardwarePushBot(){

    }

    /* Initialize standard Hardware interfaces */
    public void init(com.qualcomm.robotcore.hardware.HardwareMap ahwMap) {
        // Save reference to Hardware map
        hwMap = ahwMap;

        // Define and Initialize Motors
        leftMiddleDrive  = hwMap.get(DcMotor.class, "lMD"); // short form

        leftMiddleDrive.setDirection(DcMotor.Direction.FORWARD); // Set to REVERSE if using AndyMark motors
        leftMiddleDrive.setPower(0);

        rightMiddleDrive = hwMap.get(DcMotor.class, "rMD");
        middleArm   = hwMap.get(DcMotor.class, "mA");
        leftArmLift  = hwMap.get(DcMotor.class, "lAL");

        rightMiddleDrive.setDirection(DcMotor.Direction.FORWARD);// Set to FORWARD if using AndyMark motors
        middleArm.setDirection(DcMotor.Direction.FORWARD); // Set to REVERSE if using AndyMark motors
        leftArmLift.setDirection(DcMotor.Direction.FORWARD);// Set to FORWARD if using AndyMark motors

        // Set all motors to zero power
        leftMiddleDrive.setPower(0);
        rightMiddleDrive.setPower(0);
        middleArm.setPower(0);
        leftArmLift.setPower(0);
        //leftArm.setPower(0);

        // Set all motors to run without encoders.
        // May want to use RUN_USING_ENCODERS if encoders are installed.
        leftMiddleDrive.setMode(DcMotor.RunMode.RUN_WITHOUT_ENCODER);
        rightMiddleDrive.setMode(DcMotor.RunMode.RUN_WITHOUT_ENCODER);
        middleArm.setMode(DcMotor.RunMode.RUN_WITHOUT_ENCODER);
        leftArmLift.setMode(DcMotor.RunMode.RUN_WITHOUT_ENCODER);

        // Color Sensor initialization
        //colorSense = hwMap.get(ColorSensor.class, "color_sense");
        //blink = hwMap.get(Blinker.class, "ledController");
    }
}